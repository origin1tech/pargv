// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
"version": "2.0.0",
"tasks": [
  {
      "taskName": "build",
      "command": "tsc",
      "type": "shell",
      "windows": {
        "args": [  
          "-p",
          "${workspaceRoot}\\src\\tsconfig.json" 
        ]
      },
      "linux": {
        "args": [
          "-p",
          "./src/tsconfig.json"
        ]
      },
      "problemMatcher": "$tsc",
      "isBackground": false,
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "taskName": "watch",
      "command": "tsc",
      "type": "shell",
      "windows": {
        "args": [  
          "-p",
          "${workspaceRoot}\\src\\tsconfig.json" 
        ]
      },
      "linux": {
        "args": [
          "-p",
          "./src/tsconfig.json"
        ]
      },
      "group": "build",
      "problemMatcher": "$tsc",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}